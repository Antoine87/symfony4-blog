{% extends 'admin/base.html.twig' %}

{% block main %}
    <main class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Tables</li>
        </ol>
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Data Table Example</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Publication date</th>
                            <th>Last update</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Published at</th>
                            <th>Updated at</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.title }}</td>
                                <td>{{ post.author.fullName }}</td>
                                <td>{{ post.publishedAt|date('m/d/Y H:i:s') }}</td>
                                <td>{{ post.updatedAt|date('m/d/Y H:i:s') }}</td>
                                <td class="row no-gutters">
                                    <div class="col-sm px-1">
                                        <a class="btn btn-secondary btn-block btn-sm" href="{{ path('post_show', {slug: post.slug}) }}">Show</a>
                                    </div>
                                    <div class="col-sm px-1">
                                        <a class="btn btn-primary btn-block btn-sm" href="#">Edit</a>
                                    </div>
                                    <div class="col-sm px-1">
                                        {{ include('admin/post/_delete_form.html.twig', {post: post}, with_context = false) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </main>
{% endblock %}
